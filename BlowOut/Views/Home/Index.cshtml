@{
    ViewBag.Title = "Blow Out!";
}

<div class="jumbotron container">
    <div class="row">
        <div class="col-lg-6">
            <h1>Welcome to Blow Out</h1>
            <p class="lead">We blow our competitors out of the water</p>
            <p><a href="https://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
        </div>
        <!--This will be the picture-->
        <div class="col-lg-6">
            <img src="~/Content/Images/audio-e-guitars-guitars-music-6966.jpg" class="img-fluid" style="max-width: 100%; height:auto" />
        </div>
    </div>
    
</div>

<div class="container-fluid">
    <div class="row">
        <!-- Then we will have an explanation-->
        <div class="col-md-5">
            <div class="row" style="padding:20px">
                Here at BlowOut instrument rentals we allow for users of all skill levels to rent new and used instruments
            </div>
            <div class="row" style="padding:20px">
                <em>"It's easy to play any musical instrument: all you have to do is touch the right key at the right time and the instrument will play itself”.</em> <br /> - Johann Sebastian Bach
            </div>
        </div>
        <!--Then there will be the three buttons. Rentals, About, and Contact-->
        <div class="col-md-7">
            
            <button class="btn-lg" style="padding:15px">@Html.ActionLink("Rentals", "Index", "Rentals")</button><br /><br />
            <button class="btn-lg" style="padding:15px">@Html.ActionLink("About", "Index", "Home")</button><br /><br />
            <button class="btn-lg" style="padding:15px">@Html.ActionLink("Contact", "Index", "Home")</button>
        </div>
    </div>
</div>


